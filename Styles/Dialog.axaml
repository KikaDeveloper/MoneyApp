<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style Selector="StackPanel.dialog">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="Margin" Value="20 15"/>
      <Setter Property="Orientation" Value="Vertical"/>
      <Setter Property="Spacing" Value="15"/> 
    </Style>

    <Style Selector="TextBox.dialog_input">
      <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style Selector="TextBlock.available_amount">
      <Setter Property="FontSize" Value="16"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style Selector="Button.dialog_add">
      <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

</Styles>
