<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="using:MoneyApp.Converters"
		x:Class="MoneyApp.Dialog.AddCategoryWindow"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        MaxWidth="310" MaxHeight="150"
        Title="{Binding Title}">
  
		<Window.Resources>
			<converters:AmountConverter x:Key="AmountConverter"/>
		</Window.Resources>

	<DockPanel>
		<StackPanel Classes="dialog">
		<!-- Input для текста -->
		<TextBox Watermark="Name"
				Text="{Binding InputName}"
				Classes="dialog_input"/>
			<Grid ColumnDefinitions="0.6*, 0.4*">
				<!-- Input для суммы -->
				<TextBox Grid.Column="0" 
						Watermark="Amount"
						Text="{Binding InputAmount}"
						Name="Amount"
						Classes="dialog_input"/>
				<!-- достпуная для ввода сумма -->
				<TextBlock Grid.Column="1"
						Text="{Binding AvailableAmount, Converter={StaticResource AmountConverter}}"
						Classes="available_amount"/>
			</Grid>
		
		<Button Content="Add" 
				Command="{Binding AddCommand}"
				Classes="dialog_add"/>
		</StackPanel>
	</DockPanel>

</Window>