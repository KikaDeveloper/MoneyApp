<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="using:MoneyApp"
             x:Class="MoneyApp.CategoryManagerView">
             
      <ListBox Items="{Binding CategoryViewModels}"
               SelectionMode="Toggle"
               SelectedItem="{Binding SelectedCategory}">
            <ListBox.ItemTemplate>
                  <DataTemplate>
                      <Grid ColumnDefinitions="0.5*, 0.5*"
                              RowDefinitions="30, *">
                              <TextBlock Text="{Binding Category.Name}"
                                    Grid.Column="0"
                                    Grid.Row="0" 
                                    VerticalAlignment="Center"
                                    FontSize="18"/>
                              <TextBlock Text="{Binding Category.Amount}"
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    FontSize="18"/>

                              <StackPanel Background="DarkGray"
                                          Grid.ColumnSpan="2"
                                          Grid.Row="1">
                                    <ItemsControl Items="{Binding RecordViewModels}">
                                          <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                      <v:RecordView />
                                                </DataTemplate>
                                          </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                              </StackPanel>
                        </Grid>
                  </DataTemplate>
      </ListBox.ItemTemplate>
      <ListBox.Styles>
            <Style Selector="ListBoxItem">
                  <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            </Style>
            <!-- скрытие и открытие панели с записями -->
            <Style Selector="ListBoxItem[IsSelected=true] > Grid > StackPanel">
                  <Setter Property="IsVisible" Value="true"/>
            </Style>
            <Style Selector="ListBoxItem[IsSelected=false] > Grid > StackPanel">
                  <Setter Property="IsVisible" Value="false"/>
            </Style>
            </ListBox.Styles>
      </ListBox>
</UserControl>