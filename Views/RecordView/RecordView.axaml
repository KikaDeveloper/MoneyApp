<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MoneyApp.RecordView">

  <Border Classes="record_box">
    <Grid ColumnDefinitions="4*, 4*, 2*">
      <TextBlock Text="{Binding Record.Name}" 
                  Grid.Column="0"
                  Classes="record_box left"/>
      <TextBlock Text="{Binding Record.Amount}" 
                  Grid.Column="1"
                  Classes="record_box right"/>
      <Button Grid.Column="2"
              Height="20"
              Width="20"
              HorizontalAlignment="Right"
              Margin="0 0 5 0"
              Classes="delete">
         <Path Data="{StaticResource DeleteButtonIcon}" 
                Fill="#757575"
                Height="{StaticResource DeleteIconSize}"
                Width="{StaticResource DeleteIconSize}"/> 
      </Button>
    </Grid>
  </Border>
</UserControl>
