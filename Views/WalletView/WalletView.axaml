<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="using:MoneyApp"
             x:Class="MoneyApp.WalletView"
             Margin="10">
  
  <Grid RowDefinitions="35, *">

    <StackPanel Grid.Row="0" 
                Spacing="5"
                Orientation="Horizontal"
                HorizontalAlignment="Center">
      <TextBlock Text="{Binding SelectedAdapter.Wallet.Amount}" 
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  FontSize="28"/>
      <TextBlock Text="out of"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  FontSize="28"/>
      <TextBlock Text="{Binding SelectedAdapter.Wallet.Amount}"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  FontSize="28"/>
    </StackPanel>

    <TabControl Grid.Row="1"
                Items="{Binding WalletAdapters}"
                SelectedItem="{Binding SelectedAdapter}">

      <TabControl.ItemTemplate>
        <DataTemplate>
          <StackPanel Margin="10"
                      Orientation="Horizontal"
                      VerticalAlignment="Center"
                      Spacing="5">
            <TextBlock Text="{Binding Wallet.Name}"
                        FontSize="20"/>
            <Button Height="18"
                    Width="18">
              <TextBlock Text="X"
                          FontSize="10"/>
            </Button>
          </StackPanel>
        </DataTemplate>
      </TabControl.ItemTemplate>

      <TabControl.ContentTemplate>
        <DataTemplate>
          <Grid ColumnDefinitions="0.5*, 0.5*">
            <v:CategoryManagerView DataContext="{Binding ViewModel}" Grid.Column="0"/>
          </Grid>
        </DataTemplate>
      </TabControl.ContentTemplate>

    </TabControl>

  </Grid>

</UserControl>