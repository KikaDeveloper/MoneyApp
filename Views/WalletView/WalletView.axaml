<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="using:MoneyApp"
             x:Class="MoneyApp.WalletView">
  
  <TabControl Items="{Binding WalletAdapters}">

    <TabControl.ItemTemplate>
      <DataTemplate>
        <StackPanel>
          <TextBlock Text="{Binding Wallet.Name}"/>
        </StackPanel>
      </DataTemplate>
    </TabControl.ItemTemplate>

    <TabControl.ContentTemplate>
      <DataTemplate>
        <Grid ColumnDefinitions="0.5*, 0.5*" RowDefinitions="0.2*, *">
          <v:CategoryManagerView DataContext="{Binding ViewModel}" Grid.Column="0" Grid.Row="1"/>
        </Grid>
      </DataTemplate>
    </TabControl.ContentTemplate>

  </TabControl>

</UserControl>