<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:MoneyApp"
             x:Class="MoneyApp.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Resources.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme Mode="Light"/>
        <!-- Styles -->
        <StyleInclude Source="/Styles/ComboBox.axaml"/>
        <StyleInclude Source="/Styles/ComboBoxItem.axaml"/>
        <StyleInclude Source="/Styles/Header.axaml"/>
        <StyleInclude Source="/Styles/TabControl.axaml"/>
        <StyleInclude Source="/Styles/RecordView.axaml"/>
        <StyleInclude Source="/Styles/CategoryManagerView.axaml"/>
        <StyleInclude Source="/Styles/Buttons.axaml"/>
        <StyleInclude Source="/Styles/Dialog.axaml"/>
        <!-- Animations -->
        <StyleInclude Source="/Animations/WalletViewAnimations.axaml"/>
        <StyleInclude Source="/Animations/AddDialogAnimations.axaml"/>
        <StyleInclude Source="/Animations/CategoryManagerViewAnimations.axaml"/>
    </Application.Styles>
</Application>
